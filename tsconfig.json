{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx", 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true, // Babel이 JS 파일 생성 담당할 경우 true 유지
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"] 
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
